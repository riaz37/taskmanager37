{
  "name": "taskmanager37",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:server": "turbo run build --filter=server",
    "build:render": "npm install && cd apps/server && npm install && npm run build",
    "build:render:pnpm": "pnpm install && pnpm run build:server",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:server": "cd apps/server && npm run start:prod",
    "start:render": "cd apps/server && npm run start:prod"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
